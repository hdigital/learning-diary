{
  "name": "Rocker codespace",
  "image": "ghcr.io/rocker-org/devcontainer/tidyverse:4",
  // Install Dev Container Features. More info: https://containers.dev/features
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": "just,python-is-python3"
    },
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
      "installTinyTex": false
    }
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh",
  "postCreateCommand": "just init-codespace",
  "containerEnv": {
    "QUARTO_PYTHON": "/home/rstudio/.venv/bin/python"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "davidanson.vscode-markdownlint",
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "editorconfig.editorconfig",
        "github.codespaces",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-vscode.makefile-tools",
        "quarto.quarto",
        "streetsidesoftware.code-spell-checker",
        "tamasfe.even-better-toml"
      ]
    }
  }
}
